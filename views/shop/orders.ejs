<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css" />
<link rel="stylesheet" href="/css/order.css" />
</head>
    
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
                <% if (orders.length === 0) {%> 
                                <h1>Žádné objednávky</h1>
                <% } else {%> 
                        <% for (let order of orders) { %>
                        <div class="orderCard">
                                <h3>Celková cena objednávky: <bold><%= order.totalPrice %>Kč</bold></h3>
                                <h3>Počet produktů v objednávce: <bold><%= order.totalQuantity %></bold></h3>
                                <h3> <%= (order.date).toString().split(" ").filter((element, index) => index < 5).join(" ") %></h3>
                                <%- include('../includes/button.ejs', {product:
                                        order.orderId, btnText: "Detail objednávky", action: "/order-detail:" + order.orderId, method: "get"}) %> 
                                        
                                        <% } %>
                        </div>
                <% } %>
        </main>
        <%- include('../includes/end.ejs') %>
</body>
