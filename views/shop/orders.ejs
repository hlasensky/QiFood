<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css" />
<link rel="stylesheet" href="/css/product.css" />
</head>
    
<body>
	<%- include('../includes/navigation.ejs') %>

	<main>
        <% if (orders.length === 0) {%> 
			<h1>Žádné objednávky</h1>
		<% } else {%> 
                <% for (let order of orders) { %>
                    <h2>Celková cena objednávky: <%= order.totalPrice %>Kč</h2>
                    <h2>Počet produktů v objednávce: <%= order.totalQuantity %></h2>
                    <h2> <%= order.date %></h2>
                    <%- include('../includes/button.ejs', {product:
                        order.orderId, btnText: "Detail produktu", action: "/order-detail:" + order.orderId, method: "get"}) %> 
                        
                <% } %>
        <% } %>
        <%- include('../includes/end.ejs') %>
	</main>
</body>
