<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/category.css">
    <link rel="stylesheet" href="/css/landingPage.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="h1Header">
        <h1>Jídlo které si užijete!</h1>
        <img src="/images/landing.png" alt="error">
    </div>
    <main>
        <% if (categories.length > 0) { %>
            <div class="categoryesContainer">
                <% for (let category of categories) { %>
                    <article class="categoryContainer">
                        <a class="categoryUrl" href="<%= category.url %>">
                        <div class="categoryImageContainer" >
                            <img class="categoryImage" src="<%= category.imageUrl %>"
                                alt="<%= category.title %>">
                        </div>
                        <header class="categoryTitleHeader">
                            <h2 class="categoryTitle"><%= category.title %></h2>
                        </header>
                        </a>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Categories Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>